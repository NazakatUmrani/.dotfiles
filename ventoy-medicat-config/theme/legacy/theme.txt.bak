+ boot_menu {
  text = " "
  left = 20%
  width = 60%
  top = 20%
  height = 60%
  menu_pixmap_style = "menu_*.png"
  item_font = "ascii"  
  item_color = "#ffffff"  
  item_height = 32
  item_spacing = 5
  item_padding = 7
  selected_item_font = "ascii"
  selected_item_color= "#f2f2f2"
  selected_item_pixmap_style = "select_*.png"
  item_icon_space = 20
  scrollbar = true
  scrollbar_width = 10
  scrollbar_thumb = "slider_*.png"
}

+ progress_bar {
  id = "__timeout__"
  text = "@TIMEOUT_NOTIFICATION_SHORT@"
  left = 95%
  width = 48
  top = 95%
  height = 48
  text_color = "#f2f2f2"
  bar_style = "*"
  highlight_style = "*"
}

